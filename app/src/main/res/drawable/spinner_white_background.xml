<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="8dp"/>
                    <stroke android:width="1dp" android:color="@color/dark_gray"/> <solid android:color="@color/white"/>
                </shape>
            </item>
            <item android:gravity="end">
                <bitmap android:src="@drawable/down_arrow" android:tint="@color/dark_gray"/>
            </item>
        </layer-list>
    </item>
</selector>