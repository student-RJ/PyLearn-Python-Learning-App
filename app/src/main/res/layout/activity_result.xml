<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_background_animated">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header with Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/arrow_left"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back button"
                app:tint="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiz Results"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <!-- Dynamic Greeting with Avatar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:background="@drawable/greeting_background"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/iv_user_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/profile"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/tv_greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello User!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Main Score Card with Animated Progress -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            android:backgroundTint="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="20dp">

                <!-- Circular Progress with Animation -->
                <!-- For CircleProgress (around line 96) -->
                <com.github.lzyzsd.circleprogress.CircleProgress
                    android:id="@+id/circle_progress"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:progress="0"
                    app:progress_color="@color/progress_color"
                    app:progress_width="10dp"
                    app:text_color="@color/progress_text"
                    app:text_size="30sp"/>

                <!-- Score Details -->
                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score: 0/10 (0%)"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp" />

                <!-- Time Taken -->
                <TextView
                    android:id="@+id/tv_time_taken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â±ï¸ Time: 00:00"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="5dp" />

                <!-- Performance Message with Dynamic Color -->
                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/message_text"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Let's see how well you did!"
                    android:background="@drawable/message_background"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Visual Graph Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Performance Breakdown"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"/>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/bar_chart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />


                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pie_chart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Summary Cards with Animation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_correct"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="120dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/card_correct">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_correct"
                        app:tint="@color/white"/>

                    <TextView
                        android:id="@+id/tv_correct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Correct: 0"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_incorrect"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="120dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/card_incorrect">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_incorrect"
                        app:tint="@color/white"/>

                    <TextView
                        android:id="@+id/tv_incorrect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Incorrect: 0"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_unattempted"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="120dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/card_unattempted">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_unattempted"
                        app:tint="@color/white"/>

                    <TextView
                        android:id="@+id/tv_unattempted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unattempted: 0"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Achievements Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:backgroundTint="@color/card_achievements">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ† Achievements Unlocked"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:id="@+id/layout_achievements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Dynamic achievements will be added here programmatically -->
                    <TextView
                        android:id="@+id/tv_no_achievements"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keep trying to unlock achievements!"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:padding="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_share"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Share"
                android:textColor="@color/white"
                app:icon="@drawable/share"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                android:backgroundTint="@color/button_share"
                android:layout_marginEnd="5dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_retry"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Try Again"
                android:textColor="@color/white"
                app:icon="@drawable/retry"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                android:backgroundTint="@color/button_retry"
                android:layout_marginStart="5dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        </LinearLayout>

        <!-- Badges Earned Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:backgroundTint="@color/card_badges">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ–ï¸ Badges Earned"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/layout_badges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Dynamic badges will be added here programmatically -->
                        <TextView
                            android:id="@+id/tv_no_badges"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Complete more quizzes to earn badges!"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"/>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>