<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardTopic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:layout_margin="8dp"
    android:backgroundTint="#FFFFFF"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp"
    android:stateListAnimator="@animator/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivTopicIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/book"
                app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.SmallComponent"/>

            <TextView
                android:id="@+id/tvTopicName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Topic Name"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#212121"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/tvBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed"
                app:chipIcon="@drawable/check"
                app:chipBackgroundColor="@color/green_500"
                android:textColor="@android:color/white"
                app:chipCornerRadius="8dp"
                app:chipIconSize="20dp"
                app:chipIconVisible="true"
                app:closeIconVisible="false"
                app:iconStartPadding="4dp"
                app:iconEndPadding="4dp"
                android:ellipsize="none"
                android:maxLines="1"
                android:minWidth="0dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progress:"
                android:textSize="14sp"
                android:textColor="#757575"/>

            <TextView
                android:id="@+id/tvProgressPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:layout_marginStart="4dp"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvProgressQuizzesInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="#9E9E9E"/>
        </LinearLayout>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:trackColor="#E0E0E0"
            app:trackCornerRadius="4dp"
            app:indicatorColor="#4CAF50"
            android:progress="0"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tvAverageScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_column="0" android:layout_row="0"
                android:text="ðŸ“Š Avg: 0.0"
                android:textSize="14sp"
                android:textColor="#424242"
                android:layout_gravity="fill_horizontal"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                android:maxLines="2" android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvHighestScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_column="1" android:layout_row="0"
                android:text="ðŸ† High: 0"
                android:textSize="14sp"
                android:textColor="#424242"
                android:layout_gravity="fill_horizontal"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="8dp"
                android:maxLines="2" android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvTotalScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_column="0" android:layout_row="1"
                android:text="ðŸ“ˆ Total: 0"
                android:textSize="14sp"
                android:textColor="#424242"
                android:layout_gravity="fill_horizontal"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                android:maxLines="2" android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvQuizzesAttempted"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_column="1" android:layout_row="1"
                android:text="ðŸ“ Attempts: 0"
                android:textSize="14sp"
                android:textColor="#424242"
                android:layout_gravity="fill_horizontal"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="8dp"
                android:maxLines="2" android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvBestTimeSpent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_column="0" android:layout_row="2"
                android:text="â±ï¸ Best: 0:00"
                android:textSize="14sp"
                android:textColor="#424242"
                android:layout_gravity="fill_horizontal"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                android:maxLines="2" android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvTotalTimeSpent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_column="1" android:layout_row="2"
                android:text="ðŸ•’ Total: 0:00"
                android:textSize="14sp"
                android:textColor="#424242"
                android:layout_gravity="fill_horizontal"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="8dp"
                android:maxLines="2" android:ellipsize="end"/>
        </GridLayout>

        <TextView
            android:id="@+id/tvQuizCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz Completed: false"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#757575"
            android:layout_marginTop="12dp"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShare"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share Progress"
            android:textColor="#6200EE"
            app:icon="@drawable/share"
            app:iconTint="#6200EE"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>