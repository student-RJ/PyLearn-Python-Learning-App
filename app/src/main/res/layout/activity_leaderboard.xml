<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/leaderboard_dynamic_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:alpha="0.2"
            android:src="@drawable/abstract_background_pattern"
            android:contentDescription="Leaderboard background pattern" />

        <View
            android:id="@+id/leaderboard_background_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_overlay"
            android:alpha="0.6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/purple_700"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/arrow_left"
                    app:tint="@android:color/white"
                    android:contentDescription="Back button"
                    android:padding="2dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Leaderboard"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="40dp" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scrollbars="none"
                android:paddingHorizontal="4dp">
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroup_leaderboard_filters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:selectionRequired="true"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_all_time"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All Time"
                        android:checked="true"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background_color"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_daily"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background_color"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_weekly"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weekly"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background_color"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_friends"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friends"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background_color"/>
                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="bottom|center_horizontal"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/user2_section"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user2_profile"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/profile"
                        app:civ_border_color="@color/silver_border"
                        app:civ_border_width="3dp"
                        android:contentDescription="User 2 profile picture"
                        android:onClick="onProfileClick" />

                    <TextView
                        android:id="@+id/user2_rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 ðŸ¥ˆ"
                        android:textColor="@color/silver_medal"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/user2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="User Two"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/user2_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="75%"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/user1_section"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/user1_trophy"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/gif"
                        android:layout_marginBottom="4dp"
                        android:contentDescription="Gold trophy icon"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user1_profile"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/profile"
                        app:civ_border_color="@color/gold_border"
                        app:civ_border_width="4dp"
                        android:contentDescription="User 1 profile picture"
                        android:onClick="onProfileClick" />

                    <TextView
                        android:id="@+id/user1_rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 ðŸ‘‘"
                        android:textColor="@color/gold_medal"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:id="@+id/user1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="User One"
                        android:textColor="#222222"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/user1_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90%"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/user3_section"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user3_profile"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/profile"
                        app:civ_border_color="@color/bronze_border"
                        app:civ_border_width="3dp"
                        android:contentDescription="User 3 profile picture"
                        android:onClick="onProfileClick" />

                    <TextView
                        android:id="@+id/user3_rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 ðŸ¥‰"
                        android:textColor="@color/bronze_medal"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/user3_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="User Three"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/user3_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="80%"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/current_user_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/purple_100"
                app:strokeColor="@color/purple_700"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvCurrentUserRank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="60dp"
                        android:text="You: 15th"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_900"
                        android:gravity="center"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgCurrentUserProfile"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/profile"
                        app:civ_border_color="@color/purple_500"
                        app:civ_border_width="2dp"
                        android:contentDescription="Current user profile picture"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCurrentUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your Username Here"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_900"/>

                        <TextView
                            android:id="@+id/tvCurrentUserPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="55.00%"
                            android:textSize="16sp"
                            android:textColor="@color/purple_700"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Leaderboard"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_leaderboard"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingBottom="16dp"
                android:layout_marginTop="8dp"/>

            <ProgressBar
                android:id="@+id/leaderboard_loading_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/leaderboard_empty_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No scores yet. Be the first to join the ranks!"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:textColor="#666666"
                android:textSize="16sp"
                android:visibility="gone"/>

        </LinearLayout>
    </FrameLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>