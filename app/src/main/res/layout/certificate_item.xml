<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    android:radius="20dp"
    android:elevation="8dp"
    android:backgroundTint="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Certificate Preview Frame -->
        <FrameLayout
            android:id="@+id/frame_preview"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_bg"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_cert_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/certi" />

            <!-- Semi-transparent overlay for better text readability -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#B3FFFFFF" /> <!-- White with 70% opacity -->

            <!-- Overlay TextViews to show name/topic/date/score on preview -->
            <TextView
                android:id="@+id/tv_preview_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal|top"
                android:paddingTop="40dp"
                android:shadowColor="#88000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1" />

            <TextView
                android:id="@+id/tv_preview_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Topic"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:shadowColor="#88000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1" />

            <TextView
                android:id="@+id/tv_preview_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal|bottom"
                android:paddingBottom="40dp"
                android:shadowColor="#88000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1" />

            <TextView
                android:id="@+id/tv_preview_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal|bottom"
                android:paddingBottom="20dp"
                android:shadowColor="#88000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1" />

        </FrameLayout>


        <!-- Basic details visible when preview hidden -->
        <TextView
            android:id="@+id/tv_cert_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Python Basics"
            android:textColor="#263238"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_cert_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 01 Jan 2025"
            android:textColor="#546E7A"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tv_cert_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: 85%"
            android:textColor="#546E7A"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/btn_view_cert"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/eye_close"
                android:contentDescription="Toggle Certificate Preview"
                app:tint="#0288D1"
                android:padding="10dp" />

            <ImageButton
                android:id="@+id/btn_download_cert"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/downlaod_icon"
                android:contentDescription="Download Certificate"
                app:tint="#43A047"
                android:padding="10dp" />

            <ImageButton
                android:id="@+id/btn_share_cert"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/share"
                android:contentDescription="Share Certificate"
                app:tint="#F57C00"
                android:padding="10dp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
