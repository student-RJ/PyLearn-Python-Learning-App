<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_vector_colorful"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="100dp"   tools:targetApi="jelly_bean_mr1"
                android:gravity="center_horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/card_background_light_blue">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/nav_icon"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/menu_icon"
                            android:padding="12dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Navigation Menu"
                            app:tint="@color/icon_color_dark" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:id="@+id/tv_greeting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Good Morning, User!"
                                android:textColor="@color/text_color_primary"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Your progress: 0%"
                                android:textColor="@color/text_color_secondary"
                                android:textSize="16sp" />

                            <ProgressBar
                                android:id="@+id/progress_bar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_marginTop="8dp"
                                android:max="100"
                                android:progress="0"
                                android:progressTint="@color/progress_bar_color_natural"
                                android:backgroundTint="@color/progress_bar_background_color" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:paddingTop="24dp"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false">

                    <com.google.android.material.card.MaterialCardView
                        style="@style/FeatureCardStyle"
                        android:onClick="openLearningModule">

                        <LinearLayout
                            android:id="@+id/tutorial_layout"
                            style="@style/FeatureCardContentStyle">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/tutotrial_icon" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Python Tutorials"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/feature_text_color" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        style="@style/FeatureCardStyle"
                        android:onClick="openCodeCompiler">

                        <LinearLayout
                            android:id="@+id/code_compiler_layout"
                            style="@style/FeatureCardContentStyle">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/complier_icon" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Code Compiler"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/feature_text_color" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        style="@style/FeatureCardStyle"
                        android:onClick="openQuizSelection">

                        <LinearLayout
                            android:id="@+id/quiz_layout"
                            style="@style/FeatureCardContentStyle">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/take_a_quiz" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Take a Quiz"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/feature_text_color" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        style="@style/FeatureCardStyle"
                        android:onClick="openFlashcards"
                        android:alpha="0.6"> <!-- Reduce opacity to indicate disabled state -->

                        <LinearLayout
                            android:id="@+id/flashcards_layout"
                            style="@style/FeatureCardContentStyle">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/flashacard"
                                android:alpha="0.7" /> <!-- Make icon slightly transparent -->

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Flashcards"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/feature_text_color" />

                            <!-- Add "Coming Soon" badge -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Coming Soon"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:background="@drawable/coming_soon_bg"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        style="@style/FeatureCardStyle"
                        android:id="@+id/daily_challenge_card"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:id="@+id/daily_challenge_layout"
                            style="@style/FeatureCardContentStyle">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/daily" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Daily Challenge"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/feature_text_color" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        style="@style/FeatureCardStyle"
                        android:visibility="visible"
                        tools:visibility="visible">
                        <LinearLayout style="@style/FeatureCardContentStyle">
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:alpha="0.5"
                                android:src="@drawable/features"
                                app:tint="@null" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:alpha="0.5"
                                android:text="Coming Soon"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/feature_text_color_faded" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </GridLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/go_premium_card_bg">
                    <LinearLayout
                        android:id="@+id/subscribe_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:onClick="openSubscription">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/premium" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Unlock Premium Features!"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/go_premium_text_color" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Get access to more content and ad-free learning."
                                android:textSize="14sp"
                                android:textColor="@color/go_premium_text_color_secondary" />
                        </LinearLayout>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/features" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="150dp"
            android:contentDescription="FAB"
            android:src="@drawable/app_icon"
            app:backgroundTint="@color/fab_background_color"
            app:tint="@null"
            app:maxImageSize="40dp"
            app:fabCustomSize="60dp" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/bottom_nav_background"
            app:menu="@menu/bottom_nav_menu"
            app:labelVisibilityMode="labeled"
            app:itemIconTint="@color/bottom_nav_selector1"
            app:itemTextColor="@color/bottom_nav_selector1" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        app:itemIconTint="@color/drawer_item_selector"
        app:itemTextColor="@color/drawer_item_selector"/>
</androidx.drawerlayout.widget.DrawerLayout>